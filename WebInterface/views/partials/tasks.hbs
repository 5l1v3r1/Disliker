<table class="table">
    <thead>
    <th scope="col">ID</th>
    <th scope="col">Type</th>
    <th scope="col">Data</th>
    <th scope="col">Progress</th>
    </thead>
    <tbody>
    <tr v-for="task in tasks">
        <td>\{{ task._id }}</td>

        <td v-if="task.type === 3">Subscribe</td>
        <td v-if="task.type == 2">Donate</td>
        <td v-if="task.type == 0">Like</td>
        <td v-if="task.type == 1">Dislike</td>

        <td v-if="task.type == 3">ChannelID <b>\{{ task.data.channelId }}</b></td>
        <td v-if="task.type == 2">Login: <b>\{{ task.data.login }}</b></td>
        <td v-if="task.type < 2">VideoID: <b>\{{ task.data.videoId }}</b></td>

        <td v-if="task.type == 2">
            <span v-if="task.status == 0">Инициализация</span>
            <span v-if="task.status == 1">В очереди</span>
            <span v-if="task.status == 2">В процессе</span>
            <span v-if="task.status == 3">Завершено</span>
            <span v-if="task.status == 5">Ошибка: \{{ task.result.error }}</span>
        </td>

        <td v-if="task.type < 2 || task.type == 3">
            <span v-if="task.status == 0">Инициализация</span>
            <span v-if="task.status == 1">В очереди</span>
            <span v-if="task.status == 2">\{{ task.result.success }}/\{{ task.result.from }}</span>
            <span v-if="task.status == 3">Завершено</span>
            <span v-if="task.status == 5">Ошибка</span>
        </td>
    </tr>
    </tbody>
</table>